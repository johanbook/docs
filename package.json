{
  "name": "docs",
  "version": "1.2.0",
  "description": "Wiki on computer related topics",
  "main": "index.js",
  "scripts": {
    "format": "prettier --prose-wrap always --write docs/*.md docs/**/*.md",
    "release": "standard-version",
    "start:dev": "docusaurus start",
    "build": "docusaurus build",
    "prepare": "husky"
  },
  "author": "Johan Book",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johanbook/docs.git"
  },
  "license": "MIT",
  "homepage": "https://johanbook.com/docs",
  "bugs": {
    "url": "https://github.com/johanbook/docs/issues"
  },
  "lint-staged": {
    "docs/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --prose-wrap always --write"
    ]
  },
  "dependencies": {
    "@docusaurus/core": "3.7.0",
    "@docusaurus/preset-classic": "3.7.0",
    "@docusaurus/theme-mermaid": "3.7.0",
    "@gentledepp/docusaurus-search-local": "1.2.1",
    "@mdx-js/react": "3.1.0",
    "clsx": "2.1.1",
    "prism-react-renderer": "2.4.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rehype-katex": "7.0.1",
    "remark-math": "6.0.0"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "standard-version": "9.5.0"
  }
